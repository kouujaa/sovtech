{
  "name": "sovtech_api",
  "version": "1.0.0",
  "description": "graphql api for take home assesment",
  "main": "src/app.ts",
  "scripts": {
    "test": "yarn jest -i --verbose",
    "start:dev": "nodemon ./src/init.ts ts-node",
    "start": "nodemon ./src/init.ts",
    "coverage": "yarn jest --collect-coverage",
    "client-install": "npm install --prefix client",
    "postinstall": "tsc",
    "server": "node ./src/init.js",
    "client": "npm start --prefix client",
    "dev": "concurrently \"npm run server\"\"npm run client\"",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install --prefix client && npm run build ---prefix client"
  },
  "engines": {
    "node": "14.17.0"
  },
  "author": "kelvin jjhok anderson",
  "license": "MIT",
  "dependencies": {
    "@graphql-tools/load-files": "^6.5.3",
    "@graphql-tools/schema": "^8.3.1",
    "@sendgrid/mail": "^7.6.0",
    "@textlint/ast-node-types": "^12.1.0",
    "@textlint/ast-traverse": "^12.1.0",
    "@types/express": "^4.17.13",
    "@types/multer": "^1.4.7",
    "@types/node": "^17.0.8",
    "@typescript-eslint/eslint-plugin": "^5.11.0",
    "@typescript-eslint/parser": "^5.11.0",
    "apollo-server": "^3.6.7",
    "apollo-server-express": "^3.6.1",
    "compression": "^1.7.4",
    "dd-trace": "^2.5.0",
    "dotenv": "^10.0.0",
    "eslint": "^8.8.0",
    "express": "^4.17.2",
    "express-http-context": "^1.2.4",
    "formidable": "^2.0.1",
    "graphql": "^16.2.0",
    "graphql-middleware": "^6.1.18",
    "graphql-shield": "^7.5.0",
    "graphql-type-json": "^0.3.2",
    "lodash": "^4.17.21",
    "morgan": "^1.10.0",
    "morgan-body": "^2.6.6",
    "node-fetch": "2.6.1",
    "typescript": "^4.5.4"
  },
  "devDependencies": {
    "@types/jest": "^27.4.1",
    "jest": "^27.5.1",
    "jest-transform-graphql": "^2.1.0",
    "lint": "^0.7.0",
    "lint-staged": "^12.3.4",
    "nodemon": "^2.0.15",
    "patch-package": "^6.4.7",
    "supertest": "^6.2.2",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.4.0"
